// GRID SETTINGS
page_width    = 1000
rem_base      = 16px
total_columns = 12

// PADDINGS
grid_padding  = 5px
row_padding   = 5px
col_padding   = 5px


// MEDIA QUERIES
screen_only       = "only screen"
landscape    = screen_only + " and (orientation : landscape)"
portrait     = screen_only + " and (orientation : portrait)"

// SMALL DISPLAYS
small_start  = 40em
small_up     = screen_only
small_only   = screen_only + " and (max-width : " + small_start + ")"

// MEDIUM DISPLAYS
medium_start = 40.063em
medium_stop  = 64em
medium_up    = screen_only + " and (min-width : " + medium_start + ")"
medium_only  = screen_only + " and (min-width : " + medium_start + ") and (max-width : " + medium_stop + ")"

// LARGE DISPLAYS
large_start  = 64.063em
large_stop   = 90em
large_up     = screen_only + " and (min-width : " + large_start + ")"
large_only   = screen_only + " and (min-width : " + large_start + ") and (max-width : " + large_stop + ")"

// BUILD FOR
small        = small_up
medium       = medium_up
large        = large_up
